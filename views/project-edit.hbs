<h1>Редактировать {{project.title}}</h1>

<form action="/projects/edit" method="POST" class="project-form">
    <div class="input-field">
        <textarea id="title" name="title" type="text" class="validate" required rows="4" placeholder="Название" value="{{project.title}}"></textarea>
        <label for="title">Название</label>
        <span class="helper-text" data-error="Введите название"></span>
    </div>
    <div class="input-field">
        <textarea id="description" name="description" type="text" class="validate" required  rows="4" placeholder="Oписание">{{project.description}}</textarea>
        <label for="description"></label>
        <span class="helper-text" data-error="Введите описание"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="text" class="validate" required min="1" value="{{project.price}}">
        <label for="price">Цена</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>
    
    <div class="input-field">
        <input id="image"  name="image" type="text" class="validate" required value="{{project.image}}">
        <label for="image">URL картинки</label>
        <span class="helper-text" data-error="Введите URL картинки"></span>
    </div>
    <div class="input-field">
        <input id="videolink"  name="videolink" type="text" class="validate" required value="{{project.videolink}}">
        <label for="videolink">URL Видео</label>
        <span class="helper-text" data-error="Введите URL видео"></span>
    </div>

    <input type="hidden" name="id" value="{{project.id}}">
    
    <button type="submit" class="btn btn-primary">Редактировать проект</button>
</form>

<form action="/projects/remove" method="POST">
    <button class="btn btn-delete">Удалить проект</button>
    <input type="hidden" name="id" value="{{project.id}}">
</form>